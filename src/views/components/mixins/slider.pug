mixin slider(slides)
    .b-slider
        .b-slider__container
            .b-slider__wrapper.swiper-wrapper
                .b-slider__item.swiper-slide 
                    img.b-slider__img(src='./images/sl1.png')
                .b-slider__item.swiper-slide 
                    img.b-slider__img(src='./images/sl2.png')
                .b-slider__item.swiper-slide 
                    img.b-slider__img(src='./images/sl3.png')
                .b-slider__item.swiper-slide 
                    img.b-slider__img(src='./images/sl4.jpg')
                .b-slider__item.swiper-slide 
                    img.b-slider__img(src='./images/sl5.jpg')
                .b-slider__item.swiper-slide 
                    img.b-slider__img(src='./images/sl6.jpg')
            .swiper-pagination
            button(type='button').b-slider__next
                img.b-slider__next_img(src='./images/arrow_down.svg')
            button(type='button').b-slider__prev
                img.b-slider__prev_img(src='./images/arrow_down.svg')

        